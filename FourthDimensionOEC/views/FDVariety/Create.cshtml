@model FourthDimensionOEC.Models.Variety
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"Add Variety for crop {Context.Session.GetString("SessVarCropName")}";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CropId" class="control-label hidden"></label>
                <select asp-for="CropId" class="form-control hidden" asp-items="ViewBag.CropId"></select>
                <span asp-validation-for="CropId" class="text-danger hidden"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-lg btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
