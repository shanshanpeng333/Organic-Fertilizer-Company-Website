@model IEnumerable<FourthDimensionOEC.Models.Variety>
@using Microsoft.AspNetCore.Http


@{
    ViewData["Title"] = $"Variety List for crop {Context.Session.GetString("SessVarCropName")}";
}

<h2>@ViewData["Title"] </h2>

<p>
    <!--a asp-action="Create">Add Variety</a-->
    <a asp-action="Create" value="Create Variety" class="btn btn-success">Add Variety</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Crop)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="FDPlot" asp-action="Index" asp-route-id="@item.VarietyId" asp-route-type="variety">@item.Name</a>
                </td>
                <td>
                    <!--@Html.DisplayFor(modelItem => item.CropId)-->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VarietyId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VarietyId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VarietyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
