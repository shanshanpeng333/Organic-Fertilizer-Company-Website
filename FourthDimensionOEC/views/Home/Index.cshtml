@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Farm.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-dark">
                    OEC Crops and Fertilizers is a key partner in your quest for high sustainable yields<br>
                    OEC Crop & Fertilizer Company

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/crop.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-dark">
                    Specially developed seeds produce crops with high yield and feature weather, pest and disease resistance.<br>
                    OEC Crop & Fertilizer Company
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Fertilizer.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="text-dark">
                    Fertilizers and Nutrients are vital for the production of high quality food.<br>
                    OEC Crop & Fertilizer Company
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


